<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.csr.repapp"
        versionCode = "10"
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->
    <name>CSR App</name>

    <preference name="orientation" value="landscape" />
    <icon src="icon.png" />
    <!-- iPad -->
    <icon src="icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="icon-76@2x.png" gap:platform="ios" width="152" height="152" />
    <gap:splash src="splash.png" />
    <!-- iPad -->
    <gap:splash src="Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="Default-Landscape.png" gap:platform="ios" width="1024" height="768" />
    <gap:plugin name="org.apache.cordova.inappbrowser" version="0.3.3" />


    <preference name="DisallowOverscroll" value="true" />

    <description>
        An app on iPad.
    </description>

    <author href="https://build.phonegap.com" email="dunghm@offspringdigital.com">
        Daniel
    </author>

</widget>